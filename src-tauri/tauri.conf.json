{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lila Player",
  "version": "0.1.0",
  "identifier": "com.lila-player.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3123",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Lila Player",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
